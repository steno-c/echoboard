<ul class="breadcrumb">
	<li>
		<i class="icon-home"></i> <%= link_to "Home", root_path %>
		<span class="divider">/</span>
	</li>
  <li>
		<i class="icon-book"></i> <%= link_to "Projects", projects_path %>
		<span class="divider">/</span>
	</li>
  <li>
		<i class="icon-file"></i> “<%= link_to @project.name, project_path(@project) %>”
		<span class="divider">/</span>
	</li>
	<li>
	  <i class="icon-bookmark"></i> “<%= link_to @story.name, project_story_path(@project, @story) %>”
		<span class="divider">/</span>
	</li>
  <i class="icon-list-alt"></i> “<%= @task.name %>”
</ul>

<div class="row">
	<div class="span8">
		<h2><%= @task.name %></h2>
		<h6>Team: <%= link_to @task.team.name, team_path(@task.team) %></h6>
	</div>
	<div class="span4">
		<div class="btn-toolbar">
			<div class="btn-group">
			  <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
			    <i class="icon-cog"></i> Task actions
			    <span class="caret"></span>
			  </a>
			  <ul class="dropdown-menu">
					<li>
						<%= link_to edit_project_story_task_path(@project, @story, @task) do %>
							<i class="icon-pencil"></i> Edit task
						<% end %>
					</li>
					<li>
						<%= link_to [@project, @story, @task], confirm: 'Are you sure?', method: :delete do %>
							<i class="icon-remove"></i> Delete task
						<% end %>
					</li>
			  </ul>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="span8">
		<div class="well">
			<div><strong>Description</strong></div>
			<div><%= @task.description.html_safe %></div>
		</div>
	</div>
	<div class="span4">
	</div>
</div>