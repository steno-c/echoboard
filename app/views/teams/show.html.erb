<ul class="breadcrumb">
	<li>
		<i class="icon-home"></i> <%= link_to "Home", root_path %>
		<span class="divider">/</span>
	</li>
  <li>
		<i class="icon-user"></i> <%= link_to "Teams", teams_path %>
		<span class="divider">/</span>
	</li>
  <i class="icon-eye-open"></i> <li class="active">“<%= @team.name %>”</li>
</ul>

<div class="row">
	<div class="span8">
		<div>
		  <h2><%= @team.name %></h2>
		</div>
	</div>
	<div class="span4">
		<div class="btn-group">
		  <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
		    <i class="icon-cog"></i> Team actions
		    <span class="caret"></span>
		  </a>
		  <ul class="dropdown-menu">
				<li>
					<%= link_to edit_team_path(@team) do %>
						<i class="icon-pencil"></i> Edit team
					<% end %>
				</li>
				<li>
					<%= link_to @team, confirm: 'Are you sure?', method: :delete do %>
						<i class="icon-remove"></i> Delete team
					<% end %>
				</li>
		  </ul>
		</div>
	</div>
</div>

<div class="well">
  <p><%= @team.description.html_safe %></p>
</div>

<hr />

<h3>In projects</h3>

<ul>
	<% @team.teams_in_stories.each do |team_in_story| %>
	  <li>
			<i class="icon-book"></i>
			<%= link_to team_in_story.story.project.name, project_path(team_in_story.story.project) %>
			for
		  <i class="icon-bookmark"></i> <%= link_to team_in_story.story.name, project_story_path(team_in_story.story.project, team_in_story.story) %>.
		</li>
	<% end %>
</ul>