<ul class="breadcrumb">
	<li>
		<i class="icon-home"></i> <%= link_to "Home", root_path %>
		<span class="divider">/</span>
	</li>
  <li class="active">
		<i class="icon-user"></i> Teams
	</li>
</ul>

<div class="row">
	<div class="span8">
		<div class="page-header">
		  <h1>Listing teams</h1>
		</div>
	</div>
	<div class="span4">
		<%= link_to new_team_path, :class => "btn btn-primary" do %>
			<i class="icon-plus icon-white"></i> New team
		<% end %>
	</div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
	    <th>#</th>
	    <th>Name</th>
	    <th>Description</th>
    </tr>
  </thead>
	<tbody>
	<% @teams.each do |team| %>
	  <tr>
			<td><%= team.id %></td>
	    <td><%= link_to team.name, team_path(team) %></td>
	    <td><%= team.description %></td>
	  </tr>
	<% end %>
	</tbody>
</table>