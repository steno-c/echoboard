<ul class="breadcrumb">
	<li>
		<i class="icon-home"></i> <%= link_to "Home", root_path %>
		<span class="divider">/</span>
	</li>
  <li class="active">
		<i class="icon-user"></i> Teams
	</li>
</ul>

<div class="row">
	<div class="span8">
		<div class="page-header">
		  <h1>Teams</h1>
		</div>
	</div>
	<div class="span4">
		<%= link_to new_team_path, :class => "btn btn-primary" do %>
			<i class="icon-plus icon-white"></i> New team
		<% end %>
	</div>
</div>

<ul class="thumbnails">
	<% @teams.each do |team| %>
		<li class="span3">
		  <div class="thumbnail">
			  <%= link_to team_path(team), :class => "thumbnail" do %>
					<img src="http://placehold.it/260x180&text=<%= team.name %>" alt="">
				<% end %>
		    <div class="caption">
		      <h5><%= team.name %></h5>
		      <p><%= truncate(team.description) %></p>
		    </div>
		  </div>
		</li>
	<% end %>
</ul>



